<%- include('../includes/admin/adminHead.ejs') %>
    <link rel="stylesheet" href="/css/login.css">
    </head>
    <style>
    body {
        background-color: rgb(15, 15, 204); /* Set the default background color for the entire page */
    }
    </style>
    <body>


            <section class="vh-100 d-flex align-items-center justify-content-center">
                <div class="container">
                    <div class="row">
                      <div class="col-md-6 offset-md-3">
                        <div class="card my-5">
                            <div class="text-center cardbody-color">
                                <h2 class="text-center text-dark mt-3 stylish-heading">ADMIN LOG IN</h2>
                            </div>
                          <form class="card-body cardbody-color p-lg-5" action="/admin/login" method="post">
                            <div class="mb-3">
                                <label class="form-label" for="typeEmailX-2">Email</label>
                                <input type="email" id="typeEmailX-2"
                                    class="form-control" placeholder="Enter email"
                                    name="email" required />
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">Password</label>
                                                        <input type="password" id="password"
                                                            class="form-control form-control-lg rounded-0" placeholder="Password"
                                                            name="password" required />
                                                            <small style="color: red;" class="mt-3">
                                                                <%=locals.passwordNotMatch?passwordNotMatch:'' %>
                                                            </small>
                                                            <small style="color: red;" class="mt-3">
                                                                <%=locals.invalidCredentials?invalidCredentials:'' %>
                                                            </small>
                            </div>
                            <div class="text-center"><button type="submit" class="btn btn-color px-5 mb-5 w-100">LOGIN</button></div>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>
            </section>

    </body>
    <%- include('../includes/admin/adminFooter.ejs') %>
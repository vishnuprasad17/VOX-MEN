<%- include('../includes/user/userHead.ejs') %>
    <link rel="stylesheet" href="/css/login.css">
    <link rel="stylesheet" href="/css//user/form.css">
    </head>

    <body>
        <div class="main-top-section">

        <%- include('../includes/user/header.ejs') %>
            <section class="">
                <div class="container py-5 h-100">
                    <div class="row d-flex justify-content-center align-items-center h-100">
                        <div class="col-12 col-md-9 col-sm-12">
                            <div class="card shadow-2-strong cardbody-color">
                                <div class=" p-5 ">
                                    <div class="text-center">
                                        <h3 class="mb-3">EDIT PROFILE</h3>

                                    </div>
                                    <form action="/edit-profile" method="post">
                                        <div class="form-outline mb-3 row ">
                                            <div class=" col-md-6 col-12 mb-3">
                                                <label class="form-label" for="fname">First Name</label>
                                                <input type="text" id="fname"
                                                    class="form-control form-control-md rounded-0"
                                                    placeholder="Enter first name" name="fname"
                                                    value="<%=userData.fname  %>" required />
                                                <small id="fname-Error"></small>

                                            </div>
                                            <div class="col-md-6 col-12">
                                                <label class="form-label" for="lname">Last Name</label>
                                                <input type="text" id="lname"
                                                    class="form-control form-control-md rounded-0"
                                                    placeholder="Enter last name" name="lname"
                                                    value="<%=userData.lname  %>" required />
                                                <small id="lname-Error"></small>

                                            </div>
                                        </div>
                                        <div class="form-outline mb-3 row">
                                            <div class=" col-md-6 col-12 mb-3">
                                                <label class="form-label" for="mobile">Mobile</label>
                                                <input type="number" id="mobile"
                                                    class="form-control form-control-md rounded-0"
                                                    placeholder="Enter mobile no." name="mobile"
                                                    value="<%=userData.mobile  %>" required />
                                                <small id="mobile-Error"></small>

                                            </div>
                                            <div class="col-md-6 col-12">
                                                <label class="form-label" for="email">Email</label>
                                                <input type="email" id="email"
                                                    class="form-control form-control-md rounded-0"
                                                    placeholder="Enter email" name="email" value="<%=userData.email  %>"
                                                    readonly />
                                            </div>
                                        </div>

                                        <div class="text-center">
                                            <button class="btn btn-md rounded-0 login-btn btn-dark" type="submit"
                                                onclick="return validateForm()">UPDATE
                                                CHANGES</button>


                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

            <%- include('../includes/user/footerSection.ejs') %>

    </body>
    <script src="/validation/profile-edit.js" type="text/javascript"></script>

    <%- include('../includes/user/userFooter.ejs') %>

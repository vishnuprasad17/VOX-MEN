<%- include('../includes/user/userHead.ejs') %>
    <link rel="stylesheet" href="/css/user/shop.css">
    </head>

    <body>
        <div class="main-top-section">

        <%- include('../includes/user/header.ejs') %>

            <div class="container mt-5">
                <div>
                    <h1>ALL PRODUCTS</h1>
                </div>

                <div class="row pt-5">
                    <div class="col-md-3 col-lg-2 mb-4 mb-md-0 filter-bar shadow" style="height: fit-content;">
                        <div class=" pt-2" style="height: 100%;">
                            <h3 class="ps-2 mt-2" style="font-size: medium;">Filters<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-filter" viewBox="0 0 16 16">
                                <path d="M6 10.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5m-2-3a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5m-2-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5"/>
                              </svg></h4><hr>
                            <% if(removeFilter===true ) {%>
                                <a href="/shop?page=1"
                                    style="background-color: rgb(0, 0, 0); padding: 2px 6px; color: white; cursor: pointer;">Remove
                                    Filters&nbsp;x</a>
                                <% } %>
                                    <div class="ps-2 mt-2">
                                        <h5><strong>CATEGORIES</strong></h5>
                                        <div class="ps-2 mt-2">
                                            <% categoryNames.forEach((cat)=>{ %>
                                                <p>
                                                    <% if(category==cat._id){ %>
                                                        <a href="?category=<%=cat._id  %>&sortValue=<%=sortValue  %>&brand=<%=brand  %>&minPrice=<%=minPrice  %>&maxPrice=<%=maxPrice  %>&search=<%=search  %>"
                                                            style="color: rgb(0, 0, 0);">
                                                            <%=cat.name %>
                                                        </a>
                                                        <% } else{%>
                                                            <a href="?category=<%=cat._id  %>&sortValue=<%=sortValue  %>&brand=<%=brand  %>&minPrice=<%=minPrice  %>&maxPrice=<%=maxPrice  %>&search=<%=search  %>"
                                                                style="color: #636363;">
                                                                <%=cat.name %>
                                                            </a>
                                                            <% } %>

                                                </p>
                                                <% }) %>
                                        </div>

                                    </div>
                                    <div class="ps-2 pt-4">
                                        <h5><strong>BRAND</strong></h5>
                                        <div class="ps-2">
                                            <% brands.forEach((brandD)=>{ %>
                                                <p>
                                                    <% if(brand==brandD._id) {%>
                                                        <a href="?brand=<%=brandD._id %>&sortValue=<%=sortValue  %>&category=<%=category  %>&minPrice=<%=minPrice  %>&maxPrice=<%=maxPrice  %>&search=<%=search  %>"
                                                            style="color: rgb(0, 0, 0)">
                                                            <%=brandD._id %>
                                                        </a>
                                                        <% } else{%>
                                                            <a href="?brand=<%=brandD._id %>&sortValue=<%=sortValue  %>&category=<%=category  %>&minPrice=<%=minPrice  %>&maxPrice=<%=maxPrice  %>&search=<%=search  %>"
                                                                style="color: #636363;">
                                                                <%=brandD._id %>
                                                            </a>
                                                            <% } %>

                                                </p>

                                                <% }) %>
                                        </div>

                                    </div>
                                    <div class="ps-2 pt-4">
                                        <h5><strong>PRICE</strong></h5>
                                        <div class="ps-2">
                                            <% if(maxPrice==1999){ %>
                                                <p><a href="?minPrice=0&maxPrice=1999&sortValue=<%=sortValue  %>&category=<%=category  %>&brand=<%=brand  %>&search=<%=search  %>"
                                                        style="color: rgb(0, 0, 0);">UNDER ₹1999</a></p>
                                                <% }else{ %>
                                                    <p><a href="?minPrice=0&maxPrice=1999&sortValue=<%=sortValue  %>&category=<%=category  %>&brand=<%=brand  %>&search=<%=search  %>"
                                                            style="color: #636363;">UNDER ₹1999</a></p>
                                                    <% } %>
                                                        <% if(maxPrice==3999){ %>
                                                            <p><a href="?minPrice=2000&maxPrice=3999&sortValue=<%=sortValue  %>&category=<%=category  %>&brand=<%=brand  %>&search=<%=search  %>"
                                                                    style="color: rgb(0, 0, 0);">₹2000 - ₹3999</a>
                                                            </p>
                                                            <% }else{ %>
                                                                <p><a href="?minPrice=2000&maxPrice=3999&sortValue=<%=sortValue  %>&category=<%=category  %>&brand=<%=brand  %>&search=<%=search  %>"
                                                                        style="color: #636363;">₹2000 - ₹3999</a>
                                                                </p>
                                                                <% } %>

                                                                    <% if(maxPrice==7999){ %>
                                                                        <p><a href="?minPrice=4000&maxPrice=7999&sortValue=<%=sortValue  %>&category=<%=category  %>&brand=<%=brand  %>&search=<%=search  %>"
                                                                                style="color: rgb(0, 0, 0)">₹4000 -
                                                                                ₹7999</a></p>
                                                                        <% }else{ %>
                                                                            <p><a href="?minPrice=4000&maxPrice=7999&sortValue=<%=sortValue  %>&category=<%=category  %>&brand=<%=brand  %>&search=<%=search  %>"
                                                                                    style="color: #636363;">₹4000 -
                                                                                    ₹7999</a></p>
                                                                            <% } %>


                                                                                <% if(maxPrice==11999){ %>
                                                                                    <p><a href="?minPrice=8000&maxPrice=11999&sortValue=<%=sortValue  %>&category=<%=category  %>&brand=<%=brand  %>&search=<%=search  %>"
                                                                                            style="color: rgb(0, 0, 0);">₹8000
                                                                                            -
                                                                                            ₹11999</a></p>
                                                                                    <% }else{ %>
                                                                                        <p><a href="?minPrice=8000&maxPrice=11999&sortValue=<%=sortValue  %>&category=<%=category  %>&brand=<%=brand  %>&search=<%=search  %>"
                                                                                                style="color: #636363;">₹8000
                                                                                                -
                                                                                                ₹11999</a></p>
                                                                                        <% } %>


                                                                                            <% if(minPrice==12000){ %>
                                                                                                <p><a href="?minPrice=12000&sortValue=<%=sortValue  %>&category=<%=category  %>&brand=<%=brand  %>&search=<%=search  %>"
                                                                                                        style="color: rgb(0, 0, 0);">₹12000+</a>
                                                                                                </p>
                                                                                                <% }else{ %>
                                                                                                    <p><a href="?minPrice=12000&sortValue=<%=sortValue  %>&category=<%=category  %>&brand=<%=brand  %>&search=<%=search  %>"
                                                                                                            style="color: #636363;">₹12000+</a>
                                                                                                    </p>
                                                                                                    <% } %>

                                        </div>

                                    </div>
                        </div>
                    </div>

                    
                    <div class="col-md-9 col-lg-10">
                        <div class="row">


                            <div class="col me-3 text-end">
                                <label for="">Sort : </label>

                                <% if(sortValue&&sortValue==3) {%>
                                    <a href="?sortValue=3&category=<%=category  %>&brand=<%=brand  %>&minPrice=<%=minPrice  %>&maxPrice=<%=maxPrice  %>&search=<%=search  %>"
                                        style="color: rgb(0, 0, 0);">&nbsp;Latest&nbsp;|</a>
                                    <% } else{%>
                                        <a
                                            href="?sortValue=3&category=<%=category  %>&brand=<%=brand  %>&minPrice=<%=minPrice  %>&maxPrice=<%=maxPrice  %>&search=<%=search  %>">&nbsp;Latest&nbsp;|</a>
                                        <% } %>
                                            <% if(sortValue&&sortValue==2) {%>
                                                <a href="?sortValue=2&category=<%=category  %>&brand=<%=brand  %>&minPrice=<%=minPrice  %>&maxPrice=<%=maxPrice  %>&search=<%=search  %>"
                                                    style="color: rgb(0, 0, 0);">&nbsp;Price low to
                                                    High&nbsp;|</a>
                                                <% } else{%>
                                                    <a
                                                        href="?sortValue=2&category=<%=category  %>&brand=<%=brand  %>&minPrice=<%=minPrice  %>&maxPrice=<%=maxPrice  %>&search=<%=search  %>">&nbsp;Price
                                                        low to High&nbsp;|</a>
                                                    <% } %>
                                                        <% if(sortValue&&sortValue==1) {%>
                                                            <a href="?sortValue=1&category=<%=category  %>&brand=<%=brand  %>&minPrice=<%=minPrice  %>&maxPrice=<%=maxPrice  %>&search=<%=search  %>"
                                                                style="color: rgb(0, 0, 0);">&nbsp;Price High
                                                                to Low</a>
                                                            <% } else{%>
                                                                <a
                                                                    href="?sortValue=1&category=<%=category  %>&brand=<%=brand  %>&minPrice=<%=minPrice  %>&maxPrice=<%=maxPrice  %>&search=<%=search  %>">&nbsp;Price
                                                                    High to Low</a>
                                                                <% } %>

                                                                 
                            </div>

                        </div>
                        <div class="row mt-3">

                            <% if(prods.length>0){ prods.forEach((prod)=>{%>

                                <div class="col-lg-3  col-6 pb-5">
                                    <a href="/product?id=<%=prod._id%>" style="text-decoration: none; color: inherit;">
                                        <div class="card border-0 img-fluid productCards" style="width: 15rem;">

                                            <div class="image-container">
                                                <img class="card-img-top" src="/images/product-images/<%=prod.images[0]  %>"
                                                    alt="Card image cap">
                                            </div>
                                            <div class="card-body">
                                                <small>
                                                    <%=prod.brand %>
                                                </small>
                                                <p class="card-title prod-name text-uppercase">
                                                    <%=prod.name %>
                                                </p>

                                                <p class="card-text"><span class="dPrice">₹<%=prod.dPrice %>
                                                    </span>&nbsp;
                                                    <span class="price">₹<%=prod.price %></span>&nbsp;&nbsp;
                                                    <br> <span class="discount">
                                                        <% if(prod.offer) {%>
                                                            <small class=" text-white p-1 ps-2  pe-2"
                                                                style="font-weight: 100;background-color: rgb(0, 0, 0);">Special
                                                                <%= Math.floor(100-((prod.dPrice/prod.price)*100)) %>%
                                                                    off
                                                            </small>

                                                            <% } else{%>
                                                                <%= Math.floor(100-((prod.dPrice/prod.price)*100)) %>%
                                                                    off
                                                                    <% } %>

                                                    </span>
                                                </p>

                                            </div>
                                        </div>
                                    </a>
                                </div>
                                <% })} else{%>
                                    <div style="height: 80vh; display: grid;place-content: center;">
                                        <!-- <small>sorry! no products available</small> -->
                                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Layer_1" x="0px" y="0px" width="30rem" height="25rem" viewBox="0 0 400 207" enable-background="new 0 0 400 207" xml:space="preserve">
                                            <rect fill="#FFFFFF" width="402" height="207"/>
                                            <path fill="#162F6B" d="M227.38,46h-56.76c2.76-13.14,14.42-23,28.38-23S224.62,32.86,227.38,46z"/>
                                            <path fill="#FFFFFF" d="M217.02,46h-36.04c2.5-7.55,9.63-13,18.02-13C207.39,33,214.52,38.45,217.02,46z"/>
                                            <g>
                                                <polygon fill="#FFFFFF" points="144.569,138.5 156.439,46.5 241.556,46.5 252.438,138.5  "/>
                                                <path fill="#C6C6C6" d="M241.111,47l10.764,91H145.137l11.742-91H241.111 M242,46h-86l-12,93h109L242,46L242,46z"/>
                                            </g>
                                            <polygon fill="#162F6B" points="225,46 252,138 242,46 "/>
                                            <circle fill="#162F6B" cx="181.5" cy="77.5" r="5.5"/>
                                            <circle fill="#162F6B" cx="215.5" cy="77.5" r="5.5"/>
                                            <g>
                                                <g>
                                                    <path fill="#162F6B" d="M255,107c1.654,0,3,1.346,3,3s-1.346,3-3,3s-3-1.346-3-3S253.346,107,255,107 M255,105    c-2.762,0-5,2.238-5,5c0,2.761,2.238,5,5,5s5-2.239,5-5C260,107.238,257.762,105,255,105L255,105z"/>
                                                </g>
                                            </g>
                                            <path fill="#162F6B" d="M223.91,116.73c-3.73-10.24-13.4-17.53-24.74-17.53c-11.35,0-21.01,7.29-24.74,17.53  C176.21,104.44,186.61,95,199.17,95C211.73,95,222.13,104.44,223.91,116.73z"/>
                                            <g>
                                                <g>
                                                    <path fill="#162F6B" d="M143.5,79c2.481,0,4.5,2.019,4.5,4.5s-2.019,4.5-4.5,4.5s-4.5-2.019-4.5-4.5S141.019,79,143.5,79     M143.5,77c-3.59,0-6.5,2.91-6.5,6.5c0,3.589,2.91,6.5,6.5,6.5s6.5-2.911,6.5-6.5C150,79.91,147.09,77,143.5,77L143.5,77z"/>
                                                </g>
                                            </g>
                                            <polygon fill="#162F6B" points="147,120 149,132 160,134 149,135 147,147 145,135 135,134 145,132 "/>
                                            <g>
                                                <text transform="matrix(1 0 0 1 76 181)" fill="#162F6B" font-family="'Rubik-Medium'" font-size="24">Sorry, no products found !</text>
                                            </g>
                                            <path fill="#FFFFFF" stroke="#C6C6C6" stroke-miterlimit="10" d="M227.38,46"/>
                                            </svg>
                                    </div>
                                    <% } %>
                        </div>
                    </div>
                </div>
                <nav aria-label="...">
                    <ul class="pagination justify-content-end">
                        <% for(let i=1;i<=pageCount;i++) {%>
                            <li class="page-item <%=locals.currentPage==i?'active':''%>"><a class="page-link"
                                    href="/shop?page=<%=i  %>&sortValue=<%=sortValue  %>&category=<%=category  %>&brand=<%=brand  %>&minPrice=<%=minPrice  %>&maxPrice=<%=maxPrice  %>&search=<%=search  %>">
                                    <%=i %>
                                </a></li>
                            <% } %>
                    </ul>
                </nav>
            </div>
        </div>

            <%- include('../includes/user/footerSection.ejs') %>

    </body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"
        integrity="sha512-3gJwYpMe3QewGELv8k/BX9vcqhryRdzRMxVfq6ngyWXwo03GFEzjsUm8Q7RZcHPHksttq7/GFoxjCVUjkjvPdw=="
        crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>
        document.getElementById("sortSelect").addEventListener("change", function () {
            var selectedValue = this.value;
            if (selectedValue === "low") {
                window.location.href = "?sortValue=2";
            } else if (selectedValue === "high") {
                window.location.href = "?sortValue=1";
            }
        });
    </script>
    <%- include('../includes/user/userFooter.ejs') %>
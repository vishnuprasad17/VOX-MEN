<%- include('../includes/user/userHead.ejs') %>
    <link rel="stylesheet" href="/css/login.css">
    </head>

    <body>
        <div class="main-top-section">
            <%- include('../includes/user/header.ejs') %>

            <div class="container">
                <div class="row">
                  <div class="col-md-6 offset-md-3">
                    <div class="card my-5">
                        <div class="text-center cardbody-color">
                            <h2 class="text-center text-dark mt-3">Login Form</h2>
                        </div>
                      <form class="card-body cardbody-color p-lg-5" action="/login" method="post">
                        <div class="mb-3">
                          <input type="email" id="typeEmailX-2" class="form-control" placeholder="Email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <input type="password" id="password" class="form-control" placeholder="Password" name="password" required />
                            <small style="color: red;" class="mt-3">
                                <%=locals.passwordNotMatch?passwordNotMatch:'' %>
                            </small>
                            <small style="color: red;" class="mt-3">
                                <%=locals.invalidCredentials?invalidCredentials:'' %>
                            </small>
                        </div>
                        <div class="text-center"><button type="submit" class="btn btn-color px-5 mb-5 w-100">Login</button></div>
                        <div class="form-text text-center mb-5 text-dark"><a href="/forgotPassword" class="text-dark">Forgot your password?</a> / <a href="/signup" class="text-dark"> Create an
                            Account</a>
                        </div>
                      </form>
                    </div>
            
                  </div>
                </div>
              </div>
        </div>

        <%- include('../includes/user/footerSection.ejs') %>
    </body>
    <%- include('../includes/user/userFooter.ejs') %>
<%- include('../includes/user/userHead.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    </head>

    <body>
        <div class="main-top-section">

        <%- include('../includes/user/header.ejs') %>
            <section>
                <div class="container">
                    <div class="mt-5">
                        <h1>MY ORDERS</h1>
                    </div>
                    <div class="mt-5">

                        <% if(orders.length>0) { %>
                            <%orders.forEach((prods)=>{ %>
                                <div class="card mb-5 p-2">
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-4">
                                                <% prods.products.forEach((prod)=>{ %>
                                                    <div class="d-flex my-1">
                                                        <div class="me-3">
                                                            <img src="/images/product-images/<%=prod.productId.images[0]  %>"
                                                                class="img-fluid" style="width: 3rem;">
                                                        </div>
                                                        <div>
                                                            <h5 class="card-title">
                                                                <%=prod.productName %>
                                                            </h5>
                                                            <span style="color: rgb(99, 99, 99);">Size : <%=prod.size %>
                                                                    &nbsp;&nbsp;|&nbsp;&nbsp;Quantity :<%=prod.quantity
                                                                        %>
                                                            </span>
                                                            <!-- <span style="color: rgb(99, 99, 99);">Quantity :
                                                            <%=prod.quantity %>
                                                        </span> -->
                                                        </div>
                                                    </div>
                                                    <% }) %>

                                            </div>
                                            <div
                                                class="col-md-2 text-center mt-3 justify-content-center d-flex align-items-center">
                                                <h6 class="card-text">Amount: â‚¹ <%=prods.totalPrice %>
                                                </h6>
                                            </div>
                                            <div
                                                class="col-md-2 text-center mt-3 justify-content-center d-flex align-items-center">
                                                <% const dd=prods.date.getDate(); const mm=prods.date.getMonth() + 1;
                                                    const yyyy=prods.date.getFullYear(); const
                                                    formattedDate=`${dd}-${mm}-${yyyy}`; %>
                                                    <h6 class="card-text">Date: <%=formattedDate %>
                                                    </h6>
                                            </div>
                                            <div
                                                class="col-md-2 text-center mt-3 justify-content-center d-flex align-items-center">
                                                <%=prods.status %>
                                            </div>
                                            <div
                                                class="col-md-2 text-center mt-3 justify-content-center d-flex align-items-center">
                                                <a href="/orderDetails?details=<%=prods._id  %>"
                                                    class="btn btn-dark">View Details</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>


                                <% })%>
                                    <nav aria-label="...">
                                        <ul class="pagination justify-content-center pagination-md">
                                            <% for(let i=1;i<=pageCount;i++) {%>
                                                <li class="page-item <%=locals.currentPage==i?'active':''%>">
                                                    <a class="page-link" href="?page=<%=i  %>"><%=i  %></a>
                                                </li>
                                                <% } %>
                                        </ul>
                                    </nav>
                                    <%}else{ %>
                                        <div class="mt-5">
                                            <h1>No orders</h1>
                                        </div>
                                        <% } %>

                    </div>
                </div>
            </section>
        </div>

            <%- include('../includes/user/footerSection.ejs') %>

    </body>
    <%- include('../includes/user/userFooter.ejs') %>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/user/invoice.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

</head>

<body>
    <div class="container">
        <div class="row">
            <!-- BEGIN INVOICE -->
            <div class="col-12">
                <div class="grid invoice">
                    <div class="grid-body">
                        <div class="invoice-title">
                            <div class="row">
                                <div class="col-12">
                                    <img src="./public/logo.png" alt="" height="35">
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <div class="col-12">
                                    <h2>VOX | Invoice</h2>
                                    <h2>
                                        <span class="small">order <%=order._id %></span>
                                    </h2>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-6">
                                <address>
                                    <strong>Billed To:</strong><br>
                                    <%=order.deliveryAddress.name %><br>
                                        <%=order.deliveryAddress.address %><br>
                                            <%=order.deliveryAddress.town %>&nbsp;<%=order.deliveryAddress.pincode %>
                                                    <br>
                                                    <%=order.deliveryAddress.state %><br>
                                                        <span title="Phone">Ph:</abbr>
                                                            <%=order.deliveryAddress.mobile %>
                                </address>
                            </div>
                            <div class="col-6 text-end">
                                <address>
                                    <strong>Shipped To:</strong><br>
                                    <%=order.deliveryAddress.name %><br>
                                        <%=order.deliveryAddress.address %><br>
                                            <%=order.deliveryAddress.town %>&nbsp;<%=order.deliveryAddress.pincode %>
                                                    <br>
                                                    <%=order.deliveryAddress.state %><br>
                                                        <span title="Phone">Ph:</abbr>
                                                            <%=order.deliveryAddress.mobile %>
                                </address>
                            </div>
                        </div>
                        <div class="row d-flex justify-content-end">
                            <div class="col-6">
                                <address>
                                    <strong>Payment Method:</strong><br>
                                    <%=order.paymentMethod %><br><br>
                                        <!-- h.elaine@gmail.com<br> -->
                                </address>
                            </div>
                            <div class="col-6 text-end">
                                <address>
                                    <strong>Order Date:</strong><br>
                                    <% const dd=order.date.getDate(); const mm=order.date.getMonth() + 1; const
                                        yyyy=order.date.getFullYear(); const formattedDate=`${dd}-${mm}-${yyyy}`; %>
                                        <%=formattedDate %><br>
                                </address>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 mt-4">
                                <h3>ORDER SUMMARY</h3>
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr class="line">
                                                <td><strong>#</strong></td>
                                                <td class=""><strong>Products</strong></td>
                                                <td class="text-center"><strong>Qty</strong></td>
                                                <td class="text-end"><strong>Rate</strong></td>
                                                <td class="text-end"><strong>Subtotal</strong></td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <%order.products.forEach((prod)=>{ %>
                                                <tr>
                                                    <td><%=order.products.indexOf(prod) +1 %></td>
                                                    <td>
                                                        <%=prod.productName %>
                                                    </td>
                                                    <td class="text-center">
                                                        <%=prod.quantity %>
                                                    </td>
                                                    <td class="text-end">₹ <%=prod.productDiscountPrice %>
                                                    </td>
                                                    <td class="text-end">₹ <%=prod.totalProductDiscountPrice %>
                                                    </td>
                                                </tr>
                                                <% }) %>

                                                    <tr>
                                                        <td colspan="3"></td>
                                                        <td class="text-end"><strong>Taxes</strong></td>
                                                        <td class="text-end"><strong>N/A</strong></td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="3">
                                                        </td>
                                                        <td class="text-end"><strong>Total</strong></td>
                                                        <td class="text-end"><strong>₹ <%=order.totalPrice %></strong>
                                                        </td>
                                                    </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 text-end identity">
                                <p>Authorized<br><strong>VOX</strong></p>
                            </div>
                        </div>
                        <div class="print text-end">
                            <a onclick="window.print()" class="btn btn-success"><i class="bi bi-printer-fill"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END INVOICE -->
        </div>
    </div>
</body>
<script>
    window.onload(print())
</script>

</html>